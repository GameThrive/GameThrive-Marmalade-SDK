def remove(env, setting, flag):
    if flag in env[setting]:
        new_settings = list(env[setting])
        while flag in new_settings:
            new_settings.remove(flag)
        env[setting] = new_settings

if env['profile']:
    env.Append(CXXFLAGS="-pg", LINKFLAGS="-pg")

